{
  "name": "contract",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "",
  "author": "Haruki Kondo",
  "engines": {
    "node": ">=23"
  },
  "scripts": {
    "format": "npx solhint --fix --noPrompt 'contracts/**/*.sol' && bunx prettier . --write",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "verify": "npx hardhat ignition verify",
    "coverage": "SOLIDITY_COVERAGE=true npx hardhat coverage",
    "deploy:Storage": "npx hardhat ignition deploy ./ignition/modules/Storage.ts --verify",
    "deploy:USDCReward": "npx hardhat ignition deploy ./ignition/modules/USDCRewardContract.ts --verify",
    "deploy:setup": "npx hardhat run scripts/deploy-and-setup.ts",
    "deploy:full": "npx hardhat run scripts/full-deployment.ts",
    "local": "npx hardhat node",
    "getBalance": "npx hardhat getBalance",
    "getChainInfo": "npx hardhat getChainInfo",
    "getUsdcBalance": "npx hardhat getUsdcBalance",
    "transferUsdc": "npx hardhat transferUsdc",
    "addPoints": "npx hardhat addPoints",
    "transferPoints": "npx hardhat transferPoints",
    "setExchangeRate": "npx hardhat setExchangeRate",
    "depositUSDC": "npx hardhat depositUSDC",
    "withdrawUSDC": "npx hardhat withdrawUSDC",
    "getBalances": "npx hardhat getBalances",
    "claimUSDC": "npx hardhat claimUSDC",
    "pauseContract": "npx hardhat pauseContract",
    "unpauseContract": "npx hardhat unpauseContract",
    "transferOwnership": "npx hardhat transferOwnership"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^4.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.3.0",
    "base64-sol": "^1.1.0",
    "dotenv": "^17.2.1",
    "hardhat": "^2.26.1",
    "prettierrc": "^0.0.0-5",
    "solhint": "^5.0.4"
  }
}
